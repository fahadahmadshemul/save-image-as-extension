{
  "manifest_version": 3,
  "name": "FocusSentinel",
  "version": "1.0",
  "description": "An AI-powered context-aware distraction blocker.",
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"]
}
