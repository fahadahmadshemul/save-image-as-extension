{
  "manifest_version": 3,
  "name": "Save Image As Type",
  "version": "1.0",
  "description": "Save images in different formats (JPG, PNG, WEBP, PDF)",
  "permissions": ["downloads", "contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["jspdf.umd.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
